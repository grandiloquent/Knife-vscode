{
  "name": "Knife",
  "description": "An example for VS Code",
  "version": "0.0.1",
  "publisher": "grandiloquent",
  "repository": "https://github.com/grandiloquent/Knife-vscode",
  "engines": {
    "vscode": "^1.70.0"
  },
  "activationEvents": [
    "onCommand:knife.translateName",
    "onCommand:knife.formatInlineStyle",
    "onCommand:knife.translateChinese"
  ],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "knife.translateName",
        "title": "F3 翻译变量名称"
      },
      {
        "command": "knife.formatInlineStyle",
        "title": "F4 格式化内联样式"
      },
      {
        "command": "knife.translateChinese",
        "title": "F5 翻译中文"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "submenu": "submenus",
          "group": "uncommon"
        }
      ],
      "submenus": [
        {
          "command": "knife.translateName",
          "when": "editorTextFocus",
          "group": "uncommon"
        },
        {
          "command": "knife.formatInlineStyle",
          "when": "editorTextFocus",
          "group": "uncommon"
        },
        {
          "command": "knife.translateChinese",
          "when": "editorTextFocus",
          "group": "uncommon"
        }
      ]
    },
    "submenus": [
      {
        "label": "功能",
        "id": "submenus"
      }
    ]
  },
  "scripts": {},
  "devDependencies": {
    "@types/vscode": "^1.70.0"
  }
}